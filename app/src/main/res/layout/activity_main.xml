<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/images"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/UserProfile"
            android:background="@drawable/round_account_circle_white_18dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/mainView"
            android:layout_margin="40dp"
            android:background="@color/colormade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v4.view.ViewPager>
        <TextView
            android:id="@+id/txtname"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:text="Daenjel"
            android:textSize="35sp"
            android:textColor="@android:color/holo_red_light"
            android:textStyle="bold"
            android:layout_alignBottom="@id/mainView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/comma"
            android:text="  ,   "
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:layout_alignBaseline="@id/txtname"
            android:layout_toRightOf="@id/txtname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtage"
            android:text="48"
            android:textSize="25sp"
            android:textColor="#FFFF0DFF"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:layout_alignBaseline="@id/comma"
            android:layout_toRightOf="@id/comma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/occupation"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="15sp"
            android:text="University of Daystar"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:textColor="#FFFFFF00"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btnLike"
            android:background="@drawable/love"
            android:layout_centerInParent="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>
</LinearLayout>